<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <!--actionBar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/main_theme_color"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_white_bg"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shouye_sousuo"
                android:drawablePadding="9dp"
                android:text="搜索你感兴趣的话题"
                android:textColor="@color/text_color_small"
                android:textSize="@dimen/text_size_smaller" />
        </LinearLayout>
    </RelativeLayout>
    <!--轮播图-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3AB3FF" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:id="@+id/ll_pager_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>

            <ImageView
                android:id="@+id/iv_guide_yellow"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/shape_point_yellow" />
        </RelativeLayout>
    </RelativeLayout>
    <!--行业热点-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/home_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行业"
                android:textColor="@color/text_color_big"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="热点"
                android:textColor="@color/text_color_big"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            android:id="@+id/home_line_one"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toRightOf="@+id/home_one"
            android:background="@color/grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_big"
            android:layout_marginRight="@dimen/margin_horizontal"
            android:layout_toRightOf="@+id/home_line_one"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_hot_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shouye_hot"
                android:drawablePadding="@dimen/margin_small"
                android:lines="1"
                android:maxLength="15"
                android:text="作为专职的心理咨询作为专职的心理咨询作为专职的心理咨询"
                android:textColor="@color/text_color_mid" />

            <TextView
                android:id="@+id/home_hot_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/shouye_hot"
                android:drawablePadding="@dimen/margin_small"
                android:lines="1"
                android:maxLength="15"
                android:text="作为专职的心理咨询作"
                android:textColor="@color/text_color_mid" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="17dp"
                android:paddingLeft="21dp">

                <ImageView
                    android:layout_marginTop="17dp"
                    android:id="@+id/home_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shouye_huatiguangchang" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/home_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:layout_toRightOf="@+id/home_image1"
                    android:text="话题广场"
                    android:textColor="@color/text_color_big"
                    android:textSize="@dimen/text_size_mid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_text1"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/home_image1"
                    android:text="你感兴趣的话题"
                    android:textColor="@color/text_color_small"
                    android:textSize="@dimen/text_size_smaller" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey_line" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="17dp"
                android:paddingLeft="21dp">

                <ImageView
                    android:layout_marginTop="17dp"
                    android:id="@+id/home_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shouye_renmaibanshi" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/home_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:layout_toRightOf="@+id/home_image2"
                    android:text="人脉办事"
                    android:textColor="@color/text_color_big"
                    android:textSize="@dimen/text_size_mid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_text2"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/home_image2"
                    android:text="一个好汉三个帮"
                    android:textColor="@color/text_color_small"
                    android:textSize="@dimen/text_size_smaller" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="17dp"
                android:paddingLeft="21dp">

                <ImageView
                    android:layout_marginTop="17dp"
                    android:id="@+id/home_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shouye_xiaodaoxiaoxi" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/home_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:layout_toRightOf="@+id/home_image3"
                    android:text="小道消息"
                    android:textColor="@color/text_color_big"
                    android:textSize="@dimen/text_size_mid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_text3"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/home_image3"
                    android:text="文案"
                    android:textColor="@color/text_color_small"
                    android:textSize="@dimen/text_size_smaller" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/grey_line" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="17dp"
                android:paddingLeft="21dp">

                <ImageView
                    android:layout_marginTop="17dp"
                    android:id="@+id/home_image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shouye_zhichangbaike" />

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/home_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:layout_toRightOf="@+id/home_image4"
                    android:text="职场百科"
                    android:textColor="@color/text_color_big"
                    android:textSize="@dimen/text_size_mid" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/home_text4"
                    android:layout_marginLeft="@dimen/margin_big"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/home_image4"
                    android:text="职场你不知道的秘密"
                    android:textColor="@color/text_color_small"
                    android:textSize="@dimen/text_size_smaller" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grey_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:gravity="center_vertical"
        android:text="热门回答"
        android:textColor="@color/text_color_big"
        android:textSize="@dimen/text_size_mid" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_line" />
</LinearLayout>